@using System.Security.Claims

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RideOnCab</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootswatch/yeti/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    @*    <div class="row">*@
    <div id="sidebar">
        <ul class="nav">
            <li class="active"><a asp-controller="Home" asp-action="Index">Home</a></li>
            @if (User.Identity.IsAuthenticated)
            {
                <li><a asp-controller="Vehicles" asp-action="Index">Vehicles</a></li>
                    <li><a asp-controller="Cabs" asp-action="Index">Cabs</a></li>
                    <li><a asp-controller="Rides" asp-action="Index">Rides</a></li>
            }
            <li class="pull-down">
                @await Html.PartialAsync("_LoginPartial")
            </li>
        </ul>

    </div>

    <div id="wrapper">
        <nav class="navbar navbar-inverse">
            <ul class="nav navbar-nav navbar-left">
                <li>
                    <a id="sidebarToggle">
                        <i class="glyphicon glyphicon-menu-hamburger"></i>
                    </a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="Index" class="navbar-brand">Welcome to Ride on Cab!</a>
                </li>

            </ul>
        </nav>
        <div id="main" class="container-fluid">
            <div>
                @RenderBody()
            </div>
        </div>
        <div id="footer">
            <div class="navbar navbar-inverse navbar-fixed-bottom">
                <ul class="nav navbar-nav navbar-right">
                    <li><a asp-controller="App" asp-action="About">About</a></li>
                    <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
                </ul>
            </div>
        </div>
    </div>
    @*</div>*@
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("scripts", required: false)
</body>
</html>