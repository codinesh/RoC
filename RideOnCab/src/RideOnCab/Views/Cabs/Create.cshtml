@model RideOnCab.ViewModels.CabViewModel

@{
    ViewData["Title"] = "Add Cab";
}

<h2>Add Cab</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="AvailableVehicles" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="AvailableVehicles" asp-items="@Model.AvailableVehicles1" class="form-control"></select>
                <span asp-validation-for="AvailableVehicles" class="text-danger" />
            </div>
            <input type="hidden" asp-for="SelectedVehicleId"/>
        </div>
        <div class="form-group">
            <label asp-for="RegistrationNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RegistrationNumber" class="form-control" />
                <span asp-validation-for="RegistrationNumber" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/cabs.js"></script>
}
