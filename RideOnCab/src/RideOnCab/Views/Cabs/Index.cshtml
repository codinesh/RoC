@model IEnumerable<RideOnCab.Models.Cab>

@{
    ViewData["Title"] = "Cabs";
}

<h2>Cabs</h2>

<p>
    <a asp-action="Create">Add a Cab</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Vehicle.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vehicle.NumberOfSeats)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Vehicle.Manufacturer)
            @Html.DisplayFor(modelItem => item.Vehicle.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vehicle.NumberOfSeats)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistrationNumber)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>
}
</table>
